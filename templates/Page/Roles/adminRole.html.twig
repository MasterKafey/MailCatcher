{% extends 'Layout/Authenticated/base.html.twig' %}

{% block content %}
    <h3 class="font-semibold leading-2 text-gray-900 text-2xl">Promouvoir un utilisateur en Admin.</h3>
    <div class="grid grid-cols-1 gap-x-8 gap-y-8 pt-10 md:grid-cols-2">
    <form class="bg-white shadow-sm ring-1 ring-gray-200 sm:rounded-xl md:col-span-2" action="{{ path('app_admin_promote_role') }}" method="post">
        <div class="px-4 py-6 sm:p-8">
            <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-3">
            <label for="user">Choisir un utilisateur:</label>
                    <div class="mt-2">
            <select name="userId" id="user" class="form-control">
                {% for user in users %}
                    <option value="{{ user.id }}">{{ user.email }}</option>
                {% endfor %}
            </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8">
        <button type="submit" class="rounded-md bg-secondary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-secondary">Promouvoir</button>
            <a href="{{ path('app_home_index') }}" type="button" class="text-sm font-semibold leading-6 text-gray-900">Annuler</a>
        </div>
    </form>
    </div>
{% endblock content %}